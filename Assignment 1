sno=int(input('enter student no:'))
name=input('enter student name:')
group=input('enter group:')
s1=int(input('enter maths:'))
s2=int(input('enter physics:'))
s3=int(input('enter computers:'))
total=s1+s2+s3
avg=total/3
print('sno:',sno)
print('name:',name)
print('group:',group)
print('total:',total)
print('avg:',avg)
